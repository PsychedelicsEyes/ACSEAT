{% extends 'base.html.twig' %}
{% block title %}Se connecter{% endblock %}
{% block body %}
    <div class="post-container">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3">Inscription</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <p>You don't have a account?<a href="{{ path('app_register') }}">Create a account here</a></p>

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
    </div>
{% endblock %}
