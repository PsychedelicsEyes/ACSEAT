{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container1">
        <div class="reg_form">
            <h1>Register</h1>

            {{ form_start(registrationForm) }}
        </div>
        <div class="reg-email">{{ form_row(registrationForm.email) }}</div>
        <div class="reg-psw">{{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
        </div>
        <div class="reg-agt">{{ form_row(registrationForm.agreeTerms) }}
        </div>
        <button type="submit" class="btn">Register</button>

        <p>You have a account?<a href="{{ path('app_login') }}">Connect to your account here</a></p>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
