{% extends 'base.html.twig' %}

{% block body %}
<div class="relative">


    <main id="main">

        <!-- section pizza -->
        <section id="pizza" class="pizza">
            {% for produit in products.pizza %}
                <div class="item">
                {% if produit.filename %}
                    <img src="/images/products/{{ produit.filename }}">
                {% endif %}
                    <div class="item-infos">
                        <h3>{{ produit.title }}</h3>
                        <hr>
                        <p>{{ produit.description}}</p>
                        <p class="prix">{{produit.price}}€</p>
                        <a href="{{ path('add_cart', {productId : produit.productId}) }}"><img src="img/panier.png" class="nav_panier_article"    alt="icon panier"></a>
                    </div>
                </div>
            {% endfor %}



        </section>

